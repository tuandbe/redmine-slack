<h2><%=l(:label_reminder_new)%></h2>

<%= form_with model: [@project, @reminder], local: true do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  
  <p>
    <%= submit_tag l(:button_create), class: 'button-positive' %>
    <%= link_to l(:button_cancel), project_reminders_path(@project), class: 'button' %>
  </p>
<% end %> 
